{
	"name": "sveltycms.com",
	"description": "SveltyCMS - A powerful Headless CMS with sveltekit power",
	"version": "0.0.1",
	"scripts": {
		"---- DEVELOP ----------------------------------------------------------": "",
		"dev": "bun run vite dev --open || vite dev",
		"devv": "LAUNCH_EDITOR='code' vite --open",
		"---- BUILD ----------------------------------------------------------": "",
		"build": "bun run paraglide-js compile --project ./project.inlang && bun run vite build || paraglide-js compile --project ./project.inlang && vite build",
		"---- CHECK & TEST ----------------------------------------------------------": "",
		"check": "bun svelte-kit sync && bun svelte-check --tsconfig ./tsconfig.json --threshold error || svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --threshold error",
		"check:watch": "bun svelte-kit sync && bun svelte-check --tsconfig ./tsconfig.json --watch || svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test": "bun run paraglide-js compile && bun test tests/bun || paraglide-js compile && npm test",
		"test:e2e": "pnpm dev & pnpx wait-on http://localhost:5173 && playwright test",
		"---- LINT & FORMAT ------------------------------------------------------------": "",
		"lint": "bun run prettier --check . && bun run eslint . || prettier --check . && eslint .",
		"format": "bun run prettier --write . || prettier --write .",
		"---- OTHER ----------------------------------------------------------": "",
		"preview": "bun run vite preview || vite preview"
	},
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/Rar9/SveltyCMS"
	},
	"bugs": {
		"url": "https://github.com/Rar9/SveltyCMS/issues"
	},
	"keywords": [
		"cms",
		"content-management-system",
		"DXP Digital",
		"Developer Experience Platform",
		"inlang",
		"i18n",
		"internationalization",
		"paraglide-js",
		"headless",
		"headless-cms",
		"graphql",
		"skeleton",
		"svelte",
		"svelte-cms",
		"sveltekit",
		"sveltekit_cms",
		"sveltycms",
		"oauth",
		"tailwind",
		"tailwindcss",
		"rich-text-editor",
		"lexical-editor",
		"mongodb"
	],
	"devDependencies": {
		"@iconify/svelte": "^4.0.2",
		"@inlang/paraglide-js": "^1.11.3",
		"@inlang/paraglide-sveltekit": "0.11.1",
		"@playwright/test": "^1.48.0",
		"@skeletonlabs/skeleton": "2.10.2",
		"@skeletonlabs/tw-plugin": "0.4.0",
		"@sveltejs/adapter-node": "^5.2.6",
		"@sveltejs/enhanced-img": "^0.3.8",
		"@sveltejs/kit": "^2.6.4",
		"@sveltejs/vite-plugin-svelte": "^3.1.2",
		"@tailwindcss/forms": "0.5.9",
		"@tailwindcss/typography": "0.5.15",
		"@types/eslint": "^9.6.1",
		"@types/node": "22.7.5",
		"@typescript-eslint/eslint-plugin": "^8.8.1",
		"@typescript-eslint/parser": "^8.8.1",
		"autoprefixer": "10.4.20",
		"eslint": "^9.12.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.44.1",
		"postcss": "8.4.47",
		"prettier": "^3.3.3",
		"prettier-plugin-svelte": "^3.2.7",
		"svelte": "^4.2.19",
		"svelte-check": "^4.0.4",
		"tailwindcss": "3.4.13",
		"tslib": "^2.7.0",
		"typescript": "^5.6.3",
		"vite": "^5.4.8",
		"vite-plugin-tailwind-purgecss": "0.3.3",
		"vitest": "^2.1.2"
	},
	"type": "module",
	"dependencies": {
		"@floating-ui/dom": "1.6.11",
		"@inlang/paraglide-vite": "^1.2.75",
		"@types/markdown-it": "^14.1.2",
